<p id="notice"><%= notice %></p>

<h1>Listing Measurements</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Unit Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.name %></td>
        <td><%= measurement.desc %></td>
        <td><%= UnitCategory.find(measurement.unit_category_id).name %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Measurement', new_measurement_path, class: 'btn btn-default' %>


<%= javascript_include_tag "sortable" %>