<h1>Listing Sensor Stations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensor_stations.each do |sensor_station| %>
      <tr>
        <td><%= sensor_station.name %></td>
        <td><%= sensor_station.desc %></td>
        <td><%= sensor_station.lat %></td>
        <td><%= sensor_station.lng %></td>
        <td><%= link_to 'Show', sensor_station %></td>
        <td><%= link_to 'Edit', edit_sensor_station_path(sensor_station) %></td>
        <td><%= link_to 'Destroy', sensor_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

